/*! --------------------------------------- Global */

@import 'vars.styl'

body, html
	height 100%
	width 100%
	General()





/*! --------------------------------------- Header */




/*! -------------------- Header */

header
	border-bottom 1px solid Rosa
	margin-bottom 60px
	padding-top 38px
	padding-bottom 37px
	
	nav
	
		ul
			list-style none
			margin 0
			padding 0
			
			li
				display inline-block
				
				a
					display inline-block
					padding 4px 20px 4px 20px
					Menu()
					transition(color .2s ease)
					
					&:hover
						color GrisClaro
						text-decoration none
											
					img
						height 14px
			
				ul
					background GrisNav
					height 0
					margin-left 20px
					position absolute
					overflow hidden
					transition(height .2s ease)
					z-index 1
					
					li
						display block
						
						a
							color black
							border-top 1px solid GrisNavClaro
							border-right 1px solid GrisNavClaro
							border-bottom 1px solid GrisNavObs
							border-left 1px solid GrisNavObs
							padding 10px 45px 10px 45px
							
							&:hover
								color white
						
				&:hover ul
					height 129px
					
	.BarrasMenu
		height 16px
		margin-top 3px
		text-align right
		
		img
			height 16px
			margin-top -3px
			cursor pointer





/*! -------------------- Menú Móvil */

.MenuMovil
	height 100%
	width 100%
	position absolute
	background rgba(0, 0, 0, .8)
	z-index 1
	display none
	opacity 0

	.Menu
		height 100%
		width 225px
		margin-left -225px
		position absolute
		overflow-y scroll
		background GrisNav
		
		ul
			margin 0
			padding 0
			list-style none
			
			li
				display block
				
				a
					Menu()
					display block
					border-top 1px solid GrisNavClaro
					border-bottom 1px solid GrisNavObs
					padding-top 23px
					padding-bottom 23px
					padding-left 45px
									
				ul
					height 0px
					background #cfcccc
					overflow hidden
					transition(height .2s ease)
					
					li
						a
							border-top 1px solid GrisNavObs
							border-bottom 1px solid #c4c2c2

.CerrarMenu
	background Rosa
	color white
	font-size 4em
	height 60px
	left 0px
	line-height 56px
	position absolute
	top 0
	text-align center
	width 60px
	cursor pointer





/*! --------------------------------------- General */





/*! -------------------- Item Reflexiones */

.Items
	margin-bottom 60px
	
	h1
		Titulo()
		margin 0
		margin-bottom 30px
	
	.LoopItem
		padding-top 15px
	
		img
			width 100%
			
		h3
			Subtitulo()
			margin-top 10px
			margin-bottom 10px
		p
			margin-bottom 10px
			
		a
			SubLink()
			transition(color .2s ease)
			
			&:hover
				color Rosa





/*! -------------------- Side Libros */

.BannerLibro
	text-align center
	margin-top 15px
		
	.row
		margin-bottom 30px		
		
		h2
			Titulo()
			margin-bottom 30px
			text-align left
			
		p
			text-align left
						
		a
			SubLink()
			display block
			margin-top 15px
			text-align left
			
			&:hover
				color Rosa





/*! -------------------- Sobre el autor */

.Autor
	margin-bottom 60px
	
	.Bordes
		border-bottom 1px solid Rosa
		border-top 1px solid Rosa
		padding-top 60px
		padding-bottom 60px
		
		.row
			
			div
												
				.row
													
					img
						width 100%
						
					.InformacionAutor
						
						h2
							Titulo()
							margin-bottom 15px
														
						p
							margin-bottom 15px							
						
						a
							SubLink()
							transition(color .2s ease)
							
							&:hover
								color Rosa								

.AutorBio
	
	.Bordes
		border-top none
		padding-top 0

		.row
			
			div
				
				.row
					
					.InformacionAutor
						
						p
							margin-bottom 30px
						
						p:first-child
							Especial()
							margin-bottom 30px
							
						ul
							list-style none
							padding-left 30px
							line-height 2em
							
							li:before
								content '\f0da\ '
								font-family FontAwesome
								color Rosa





/*! -------------------- Lista de correos */

.SubsEmail
	height 195px
	margin-bottom 60px
	position relative
	
	.row
		background none
		height 195px
		position relative
		
		.col-xs-12
			height 195px
			
			.col-xs-12
				background background url('../images/ListaDeCorreos.jpg') center center no-repeat
				-webkit-background-size cover
				background-size cover
			
				div
					background rgba(255, 255, 255, .5)
					box-shadow(8px 8px 80px GrisObscuro)
					left 50%
					padding-top 30px
					padding-bottom 30px
					position absolute
					top 50%
					text-align center
					transform(translate(-50%, -50%))
					width 100%
					max-width 380px
					min-width 320px
					
					h2
						Titulo()
						font-size 1.45em
						
					form
						margin-top 30px
						
						input
							border none
							padding 10px
							width 240px
							Subtitulo()
							text-transform none
							
							&:focus
								outline none
						button
							Subtitulo()
							color white
							border none
							background Rosa
							height 38px
							margin-left -3px
							transition(background .2s ease)
							
							&:hover
								background RosaHover
								
							&:focus
								outline none

::-webkit-input-placeholder
	Subtitulo()
	color Rosa
:-moz-placeholder
	Subtitulo()
	color Rosa
::-moz-placeholder
	Subtitulo()
	color Rosa
:-ms-input-placeholder
	Subtitulo()
	color Rosa





/*! -------------------- Venta de libros */

.Libros
	
	div
		
		.row
			
			div
												
				h2
					Titulo()
					
					small
						color GrisClaro
						
			div
				.row
					margin-top 30px
					margin-bottom 60px
					
					.MostrarRes
						Titulo()
						background Rosa
						color white
						cursor pointer
						font-size 1.5em
						height 60px
						line-height 56px
						margin-bottom 60px
						text-align center
						transition(background .2s ease)
						
						&:hover
							background RosaHover
							
					div
							
						.Resenia
							height 0px
							overflow hidden
							transition(height .2s ease)
										
					div
						
						img
							width 100%
							margin-bottom 60px
					
					div
						h3
							SubtituloLibro()
							margin-bottom 30px
			
			.row
				
				div
					
					.VentaLibro
						margin auto
						max-width 500px
						
						h2
							color black
							font-size 1.1em
							text-align center
							
						div
							.row
								background #f1f1f1
								border-radius(5px)
								padding-top 15px
								padding-bottom 15px
								
								.InfoLibro
									Menu()
									text-transform none
									text-align right
									
								.PreciosLibro
									
									strong
										Titulo()
										color black
										font-size 1.5em
										
									button
										border none
										background Amarillo
										border-radius(5px)
										box-shadow(0 3px 0 #e39600)
										height 35px
										margin-bottom 15px
										width 148px
										
										&:hover
											background #fedc40
										
										&:focus
											outline none
																				
										strong
																						
											font-size 1em
											text-transform none
											
											p
												margin 0
												
									div
										
										p
											Menu()
											text-transform none
											
											i
												color #1f93d2
												font-size 2.5em
												vertical-align middle
												
								.Nota
									
									p
										Menu()
										text-align center
										text-transform none





/*! --------------------------------------- Footer */

.ContenedorFooter
	background GrisObscuro
	
	footer
		background GrisObscuro
		padding-top 40px
		padding-bottom 31px
		text-align center
		
		h3
			Subtitulo()
			color GrisClaro
			margin-bottom 15px
		
		h2
			Titulo()
			color GrisClaro
			
			span
				color white